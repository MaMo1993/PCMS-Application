<div class="text-left animated fadeInDown">
    <div class="row">
        <div class="modal-dialog modal-lg" style="width:70%;height:auto">

            <div class="modal-content">
                <div class="modal-header bg-danger p-xs b-r-xs">
                    <h3 class="modal-title">
                        Delete Learner
                    </h3>
                </div>

                <div class="modal-body">

                    <div class="panel-body BoxAndShadow">

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.LearnerCode, "Learner Code") <br />
                            @Html.DisplayFor(model => model.LearnerCode)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.LearnerName, "Learner Name") <br />
                            @Html.DisplayFor(model => model.LearnerName)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.TeacherId, "Learner Teacher") <br />
                            @Html.DisplayFor(model => model.TblTeacher.TeacherName)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.LearnerEmail, "Learner Email") <br />
                            @Html.DisplayFor(model => model.LearnerEmail)
                        </div>

                        <div class="form-group w-100"></div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.LearnerContactNr, "Contact Nr") <br />
                            @Html.DisplayFor(model => model.LearnerContactNr)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.LearnerAddress, "Learner Address") <br />
                            @Html.DisplayFor(model => model.LearnerAddress)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            <label for="LearnerStartDate">Start Date</label><br />
                            @Html.DisplayFor(model => model.LearnerStartDate)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            <label for="LearnerEndDate">End Date</label><br />
                            @Html.DisplayFor(model => model.LearnerEndDate)
                        </div>

                    </div>

                    <div class="form-group w-100"></div>
                    <div class="form-group w-100"></div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group col-md-4 col-sm-6" style="padding-right: 2em">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-default" href='@Url.Action("Index","Learners")'>Cancel</a>
                        </div>
                    }

                </div>

                <div class="form-group w-100"></div>
                <div class="form-group w-100"></div>


                <div class="modal-footer">
                    <div class="col-md-12">
                        <a class="btn btn-block btn-danger btn-sm" href='@Url.Action("Index","Learners")'>Back</a>

                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

