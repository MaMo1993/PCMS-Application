@model PCMS_Application.Models.TblSchool


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> PCMS | School Details </title>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    @*<link href="~/Content/PRoleStyle.css" rel="stylesheet" />*@
    <link href="~/Content/plugins/dataTables/datatables.min.css" rel="stylesheet" />
    <script src="~/Scripts/plugins/dataTables/datatables.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/plugins/datapicker"></script>
    <script src="~/Content/plugins/chosen"></script>
    <script src="~/Content/plugins/select2"></script>
    <link href="~/Content/plugins/chosen/bootstrap-chosen.css" rel="stylesheet">
    <link href="~/Content/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/validation.js"></script>
    <link href="~/Content/plugins/datapicker/datepicker3.css" rel="stylesheet" />
    <script src="~/Scripts/Guriddo/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/plugins/datapicker/bootstrap-datepicker.js"></script>

</head>

<body class="gray-bg">

    @{
        if (TempData["Error"] != null)
        {
            <link href="~/Content/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
            <script src="~/Scripts/plugins/sweetalert/sweetalert.min.js"></script>
            <script type="text/javascript">
            swal("Error!",@Html.Raw(Json.Encode(TempData["Error"])), "error");
            </script>
        }
    }

</body>
</html>

<div class="text-left animated fadeInDown">
    <div class="row">
        <div class="modal-dialog modal-lg" style="width:70%;height:auto">

            <div class="modal-content">
                <div class="modal-header bg-danger p-xs b-r-xs">
                    <h3 class="modal-title">
                        School Details
                    </h3>
                </div>

                <div class="modal-body">

                    <div class="panel-body BoxAndShadow">

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.SchoolCode, "School Code") <br />
                            @Html.DisplayFor(model => model.SchoolCode)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.SchoolName, "School Name") <br />
                            @Html.DisplayFor(model => model.SchoolName)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.UserId, "School User") <br />
                            @Html.DisplayFor(model => model.TblUser.UserName)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.SchoolEmail, "School Email") <br />
                            @Html.DisplayFor(model => model.SchoolEmail)
                        </div>

                        <div class="form-group w-100"></div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.SchoolContactNr, "Contact Nr") <br />
                            @Html.DisplayFor(model => model.SchoolContactNr)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            @Html.LabelFor(model => model.SchoolAddress, "School Address") <br />
                            @Html.DisplayFor(model => model.SchoolAddress)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            <label for="UserStartDate">Start Date</label><br />
                            @Html.DisplayFor(model => model.SchoolStartDate)
                        </div>

                        <div class="form-group col-md-3 col-sm-6" style="padding-right: 2em">
                            <label for="UserEndDate">End Date</label><br />
                            @Html.DisplayFor(model => model.SchoolEndDate)
                        </div>

                    </div>

                    <div class="form-group w-100"></div>
                    <div class="form-group w-100"></div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group col-md-4 col-sm-6" style="padding-right: 2em">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-default" href='@Url.Action("Index","Schools")'>Cancel</a>
                        </div>


                    }

                </div>

                <div class="form-group w-100"></div>
                <div class="form-group w-100"></div>

                <div class="modal-footer">
                    <div class="col-md-12">
                        <a class="btn btn-block btn-danger btn-sm" href='@Url.Action("Index","Schools")'>Back</a>

                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

    });


</script>


