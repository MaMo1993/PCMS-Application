
@model PCMS_Application.Models.TblUser

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>PCMS | Register</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    @*<link href="~/Content/PRoleStyle.css" rel="stylesheet" />*@
    <script src="~/Scripts/plugins/sweetalert/sweetalert.min.js"></script>

    <script type="text/javascript">

        window.onload = function () {
            var i = 0; var previous_hash = window.location.hash;
            var x = setInterval(function () {
                i++; window.location.hash = "/noop/" + i;
                if (i == 10) {
                    clearInterval(x);
                    window.location.hash = previous_hash;
                }
            }, 10);
        }

    </script>

</head>

<body class="gray-bg" style="">

    @{
        if (TempData["message"] != null)
        {
            <script type="text/javascript">
                swal("Success!",@Html.Raw(Json.Encode(TempData["message"])),"success");
            </script>
        }
    }
    @{
        if (TempData["message1"] != null)
        {
            <script type="text/javascript">
                swal("Access Denied!",
                @Html.Raw(Json.Encode(TempData["message1"])), "error");
            </script>
        }
    }
    @{
        if (TempData["message2"] != null)
        {
            <script type="text/javascript">
                swal("Access Denied!",
                @Html.Raw(Json.Encode(TempData["message2"])), "error");
            </script>
        }
    }

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>

            @{
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group col-lg-12" style="padding: 8%;  padding-top: 2%;  margin-top: 4%;   box-shadow: 0 0 10px #808080; border-radius: 3px; background: rgba(0, 0, 0, 0.7);">
                    <form class="m-t" role="form" action="@Url.Action("Register", "PCMSLogin")" method="post">
                        @Html.AntiForgeryToken()


                        <div class="form-group">
                            <input type="text" name="EmailAddress" class="form-control" placeholder="Email" required maxlength="256" />
                            @Html.ValidationMessage("EmailAddress", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="School Code" name="SchoolCode" required />

                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="New Password" name="PasswordHash" required />
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Confirm Password" name="ConfirmPassword" required />
                        </div>

                        @*<div class="form-group">
                                <div class="checkbox"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
                            </div>*@

                        <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

                        <p class="text-muted text-center"><small>Already have an account?</small></p>
                        <a class="btn btn-white btn-block" href="@Url.Action("LoginHomeIndex", "PCMSLogin")">Login</a>
                        <br /><br /><br />

                    </form>

                </div>

            }



        </div>
    </div>

</body>

</html>
