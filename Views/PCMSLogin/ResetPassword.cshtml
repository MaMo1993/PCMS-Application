
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>PCMS | New Password</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/PRoleStyle.css" rel="stylesheet" />
    <link href="~/Content/plugins/chosen/chosenStyles" rel="stylesheet" />
    <script src="~/Scripts/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/plugins/chosen"></script>

    <script type="text/javascript">

        window.onload = function () {
            var i = 0; var previous_hash = window.location.hash;
            var x = setInterval(function () {
                i++; window.location.hash = "/noop/" + i;
                if (i == 10) {
                    clearInterval(x);
                    window.location.hash = previous_hash;
                }
            }, 10);
        }

    </script>

</head>

<body class="gray-bg" style="">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>

            @{
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-lg-12" style="padding: 8%;  padding-top: 2%;  margin-top: 4%;   box-shadow: 0 0 10px #808080; border-radius: 3px; background: rgba(0, 0, 0, 0.7);">

                    <form class="m-t" role="form" action="@Url.Action("ResetPassword", "PCMSLogin")" method="post">
                        @Html.AntiForgeryToken()

                        <p class="text-muted text-center"><small><b>New Password</b></small></p>

                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email" name="EmailAddress" required>
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="School Code" name="SCode" required>

                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="New Password" name="PasswordHash" required>

                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Confirm Password" name="ConfirmPassword" required>
                        </div>

                        <button type="submit" style="margin-left:70px;" class="btn btn-primary col-lg-5">Submit</button>

                        <br /><br /><br /><br />

                    </form>
                    @{
                        if (TempData["success"] != null)
                        {
                            <script type="text/javascript">
                            swal("Success!",@Html.Raw(Json.Encode(TempData["success"])),"success");
                            </script>
                        }
                    }
                    @{
                        if (TempData["message1"] != null)
                        {
                            <script type="text/javascript">
                            swal("Error!",@Html.Raw(Json.Encode(TempData["message1"])),"error");
                            </script>
                        }
                    }
                    @{
                        if (TempData["message2"] != null)
                        {
                            <script type="text/javascript">
                            swal("Error!",@Html.Raw(Json.Encode(TempData["message2"])),"error");
                            </script>
                        }
                    }



                </div>

            }

        </div>
    </div>




</body>

</html>




